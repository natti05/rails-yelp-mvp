<h1><%= @restaurant.name %></h1>

    <ul = class="container">
      <li> <p><%= @restaurant.address %></p></li>
      <li> <p><%= @restaurant.phone_number %></p></li>
      <li> <p><%= @restaurant.category %></p></li>
      <img src="" alt="">
    </ul>

    <%= @restaurant.reviews.each do |review| %>
    <ul>
      <%= review.content %>
      <%= review.rating %>
    </ul>
    <% end %>

    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, as: :select, collection: Restaurant::RATING %>
    <%= f.button :submit %>
    <% end %>


<div>
<%= link_to "delete", restaurant_path(@restaurant)%>
<%= link_to "update", edit_restaurant_path(@restaurant)%>
<%= link_to "back", restaurants_path(@restaurants)%>
</div>
